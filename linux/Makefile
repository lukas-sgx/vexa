CC = gcc
CFLAGS = -Wall -g
PKGFLAGS = $(shell mysql_config --cflags --libs)

SRC = main.c authentication.c db.c screen.c
OUTPUT = build
BANK   = $(OUTPUT)/vexa

all: build_dir $(BANK)

build_dir:
	@echo "ğŸ“‚ Creating build directory..."
	@mkdir -p $(OUTPUT)

$(BANK): $(SRC)
	@echo "ğŸ› ï¸ Compiling VEXA..."
	$(CC) $(CFLAGS) $^ -o $@ $(PKGFLAGS)
	@echo "ğŸš€ Launch VEXA"
	./$(BANK)

run:
	@echo "ğŸš€ Launch VEXA"
	./$(BANK)

clean:
	@echo "ğŸ§¹ Cleaning build files..."
	@rm -rf $(OUTPUT)
